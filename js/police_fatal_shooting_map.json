{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Fatal Police Shooting in US",
  "width": 800,
  "height": 600,
  "projection": {"type": "albersUsa"},
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Count",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.postal", "type": "nominal", "title": "State"},
      {"field": "Count", "type": "quantitative"}
    ]
  },
  "data": {
    "url": "https://raw.githubusercontent.com/mong0009monash/DataVisAssignment2/master/USA.json",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_admin_1_states_provinces"
    }
  },
  "transform": [
    {
      "lookup": "properties.postal",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/mong0009monash/DataVisAssignment2/master/archive/crime_count_by_state.csv"
        },
        "key": "state",
        "fields": ["count"]
      }
    },
    {"calculate": "datum.count", "as": "Count"}
  ],
  "config": {}
}